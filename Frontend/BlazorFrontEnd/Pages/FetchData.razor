@page "/recipes"

@using BlazorStart.Data
@inject RecipeService recipeService
@inject FavouriteService favouriteService

@if (recipes == null)
{
    <div class="spinner-border text-primary" role="status">
        <span class="sr-only">Loading...</span>
    </div>
}
else
{
    <div class="row">
        @foreach (var recipe in recipes)
            {
                <div class="card col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4 ml-2 mb-2">
                    <img src="https://material-ui.com/static/images/cards/paella.jpg" class="card-img-top" alt="@recipe.RecipeName">
                    <div class="card-body">
                        <h5 class="card-title">@recipe.RecipeName</h5>
                        <p class="card-text">@recipe.RecipeDescription</p>
                        <NavLink class="btn btn-primary" href="@($"recipe/details/{recipe.Id}")">
                            Details
                        </NavLink>
                        <button type="button" class="btn btn-warning" @onclick="async () => { await ToggleFavourite(recipe.Id); }">Favourite</button>
                    </div>
                </div>
            }
    </div>
}

@code {
    RecipeModel[] recipes;

    protected override async Task OnInitializedAsync()
    {
        var result = (await recipeService.SearchRecipes(string.Empty));

        if (result != null && result.Items != null) {
            recipes = result.Items.ToArray();
        }
    }

    async Task ToggleFavourite(string recipeId) {
        await Console.Out.WriteLineAsync(recipeId);
        await favouriteService.ToggleFavourite(recipeId);
    }
}
