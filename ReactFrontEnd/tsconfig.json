{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es5",
      "jsx": "react",
      "module": "esNext",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": false,
      "noImplicitAny": false,
      "noImplicitReturns": false,
      "removeComments": true,
      "strictNullChecks": true,
      "outDir": "build",
      "baseUrl": "./",
      "paths": {
        "bx-utils/*" : [ "./src/utils/*" ],
        "bx-services/*" : [ "./src/services/*" ],
      },
      "lib": [
        "es6",
        "es7",
        "dom"
      ]
    },
    "exclude": [
      "public",
      "dist",
      "build",
      "node_modules"
    ]
  }