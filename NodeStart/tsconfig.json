{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es5",
      "jsx": "react",
      "esModuleInterop": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": false,
      "noImplicitAny": false,
      "noImplicitReturns": false,
      "removeComments": true,
      "strictNullChecks": false,
      "outDir": "build",
      "baseUrl": "./",
      "paths": {
        "@bx-database" : [ "./repository/index.ts" ],
        "@bx-middlewares/*" : [ "./utils/middlewares/*" ]
      },
      "lib": [
        "es6",
        "es7",
        "dom"
      ]
    },
    "exclude": [
      "node_modules"
    ]
  }